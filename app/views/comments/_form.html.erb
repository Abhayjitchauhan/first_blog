<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <% unless user_signed_in? %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
    <%else%>
      <%= f.hidden_field :commenter, :value => current_user.name %>
      <%= f.hidden_field :user_id, :value => current_user.id %> 
    <%end%>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  

  <p>
    <%= f.submit %>
  </p>
<% end %> 